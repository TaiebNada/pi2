{% block produits %}
<h1>Recheche Mod√©le par Nom</h1>

<form method="post">
    Nom : <input type="text" name="nom">
    <input type="submit" name="submit" value="recherche">





</form>


<table border="1">
    <tr>
        <th>Id</th>
        <th>Nom</th>
