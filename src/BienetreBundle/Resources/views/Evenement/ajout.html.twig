{% extends "@Bienetre/layoutbackoffice.html.twig" %}

{% block evenements %}
    <div class="grid-form1">
        <h3>Ajout evenement</h3>
        <div class="tab-content">
            <div class="tab-pane active" id="horizontal-form">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Nom evenement :</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.nomEvenement, {'att':{'class':'form-control1'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">theme evenement :</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.themeEvenement, {'att':{'class':'form-control1'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">lieu evenement :</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.lieuEvenement, {'att':{'class':'form-control1'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">nbre max de places evenement :</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.nbrMAXParticipant, {'att':{'class':'form-control1'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">date evenement :</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.dateEvenement, {'att':{'class':'form-control1'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">heure evenement :</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.heureEvenement, {'att':{'class':'form-control1'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">image evenement :</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.imageEvenement, {'att':{'class':'form-control1'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">description evenement :</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.descriptionEvenement, {'att': {'style': 'width: 200px'} }) }}
                    </div>
                </div>







                <div class="col-sm-8 col-sm-offset-2">
                    {{ form_widget(form.Ajouter, {'att':{'class':'btn-primary btn'}})}}
                </div>

                {{ form_end(form) }}

            </div>
        </div>
    </div>


{% endblock %}