{% extends '@SOS/Adoption/review.html.twig' %}
{% block review %}
<div class="women_main">
    <div class="container">

        <div class="row single">
            <div class="col-md-9 span-single">
                <div class="single_left">
                    <div class="grid images_3_of_2">
                        <ul id="etalage">
                            <li>
                                <a href="">
                                    <img class="etalage_thumb_image" src="{{ asset('uploads/images/evenement/'~ animal.image1) }}"
                                         alt="Embedded Image"/>
                                    <img class="etalage_source_image" src="{{ asset('uploads/images/evenement/'~ animal.image1) }}"
                                         alt="Embedded Image"/>
                                </a>
                            </li>
                            <li>
                                <img class="etalage_thumb_image" src="{{ asset('uploads/images/evenement/'~ animal.image2) }}"
                                     alt="Embedded Image"/>
                                <img class="etalage_source_image" src="{{ asset('uploads/images/evenement/'~ animal.image2) }}"
                                     alt="Embedded Image"/>
                            </li>
                            <li>
                                <img class="etalage_thumb_image" src="{{ asset('uploads/images/evenement/'~ animal.image3) }}"
                                     alt="Embedded Image"/>
                                <img class="etalage_source_image" src="{{ asset('uploads/images/evenement/'~ animal.image3) }}"
                                     alt="Embedded Image"/>
                            </li>
                            <li>
                                <img class="etalage_thumb_image" src="{{ asset('uploads/images/evenement/'~ animal.image4) }}" alt="image"/>
                                <img class="etalage_source_image" src="{{ asset('uploads/images/evenement/'~ animal.image4) }}" alt="image"/>
                            </li>

                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="desc1 span_3_of_2">
                        <h3>{{ animal.nom }}</h3>
                        <p>Numero : {{ animal.numero }}<a href="#"></a></p>
                        <div class="det_nav">

                        </div>
                        <div class="filter-by-color">
                            <h3>Description : {{ animal.description }}</h3>
                        </div>

                        </br></br></br>

                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="single-bottom1">
                    <h6>Detail</h6>
                    <p class="prod-desc">Race : {{ animal.race }}</p>
                    <p class="prod-desc">Espece : {{ animal.espece }}</p>
                    <p class="prod-desc">Sexe : {{ animal.sexe }}</p>
                    <p class="prod-desc">Taille : {{ animal.taille }}</p>


                    <h6>Commentaires </h6>
                    <div class="product">
                        <div class="product-desc">
                            <div class="product-img">


                            </div>
                            <div class="prod1-desc" >


                                {% block comment %}
                                {% endblock %}


                            </div>
                        </div>


                        <div class="clearfix"></div>

                    </div>


                </div>
                {% endblock %}
