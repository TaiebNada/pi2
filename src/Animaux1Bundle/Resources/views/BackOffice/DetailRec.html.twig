                </div>
            </div>
            -->
            <!-- //pop-up-box -->

        </div>

        <div class="clear"></div>
    </div>
    <footer>
        <p class="agileinfo"> <a href="{{ path ('listeReclamation') }}">Retour Liste Réclamation</a></p>
    </footer>
    </body>
    </html>
    {% endblock %}
