                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Description :</label>
                    <div class="col-sm-8">
                        {{ form_widget(f.description, {'att':{'class':'form-control1','disabled':'disabled'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Vet :</label>
                    <div class="col-sm-8">
                        {{ form_widget(f.vet, {'att':{'class':'form-control1','disabled':'disabled'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Image :</label>
                    <div class="col-sm-8">
                        {{ form_widget(f.imageFile, {'att':{'class':'form-control1','disabled':'disabled'}}) }}
