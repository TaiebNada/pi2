                    <div class="col-sm-8">
                        {{ form_widget(f.taille, {'att':{'class':'form-control1'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Date Derniere visite :</label>
                    <div class="col-sm-8">
                        {{ form_widget(f.dateVisiteD, {'att':{'class':'form-control1'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Date Vaccin :</label>
                    <div class="col-sm-8">
                        {{ form_widget(f.dateVaccin, {'att':{'class':'form-control1'}}) }}
                    </div>
                </div>

                <div class="col-sm-8 col-sm-offset-2">
                    {{ form_widget(f.Update, {'att':{'class':'btn-primary btn'}})}}
                </div>

                {{ form_end(f) }}

            </div>
