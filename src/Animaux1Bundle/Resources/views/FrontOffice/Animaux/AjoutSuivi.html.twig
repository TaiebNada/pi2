        <h3>Ajout Animal</h3>
        <div class="btn_form">
            <a href="{{ path ('maListe') }}">Retour Ã  ma liste </a>
        </div>

        <div class="tab-content">
            <div class="tab-pane active" id="horizontal-form">
                {{ form_start(f, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Nom :</label>
                    <input value="{{ form_widget(f.nom)}}" hidden="hidden">
                    <div class="col-sm-8">
                        {{ form_widget(f.nom, {'att':{'class':'form-control1','disabled':'disabled'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Sexe :</label>
                    <div class="col-sm-8">
                        {{ form_widget(f.sexe, {'att':{'class':'form-control1','disabled':'disabled'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Date Naissance :</label>
                    <div class="col-sm-8">
                        {{ form_widget(f.dateNaissance, {'att':{'class':'form-control1'},'disabled':'disabled'}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Race :</label>
                    <div class="col-sm-8">
                        {{ form_widget(f.race, {'att':{'class':'form-control1','disabled':'disabled'}}) }}
